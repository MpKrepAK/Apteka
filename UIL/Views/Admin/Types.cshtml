@inject IPreporateTypeRepository PreporateTypeRepository

@{
    ViewData["Title"] = "Каталог";
	List<PreporateType> preporates = PreporateTypeRepository.GetAll().ToList();
}

@if(User.Identity.IsAuthenticated){
	<div class="main main--aside">
		<div class="container">
			<div class="main__inner">
				<div class="catalog">
					<a asp-controller="Card" asp-action="TypeAdd">Добавить</a>
					<div class="catalog__items">
						@{
							if (preporates != null)
							{
								foreach (var item in preporates)
								{
									<div class="catalog__item">
										<div class="item__content">
											<p class="item__title">@item.Name</p>
										</div>
										<label class="item__controls">
											...
											<input type="checkbox">
											<div class="item__btns">
												<a class="item__btn" asp-action="TypeCard" asp-controller="Card" asp-route-id="@item.Id.ToString()">
													Изменить
												</a>
												<a class="item__btn" asp-action="TypeDel" asp-controller="Card" asp-route-id="@item.Id.ToString()">
													Удалить
												</a>
											</div>
										</label>
									</div>
								}
							}
						}

					</div>
				</div>
			</div>
		</div>
	</div>
}
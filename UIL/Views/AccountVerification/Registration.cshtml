@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ML.Mapper.UserRegistration
@{
  ViewBag.Title = "Регистрация";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/style.css">
  <title>Регистрация</title>
</head>
<body>
  <div class="window">
    <div class="window__title">Регистрация</div>
    <div class="window__content">
      <form class="input__form"
          method="post"
                  asp-action="Register"
                  asp-controller="AccountVerification"
                  asp-antiforgery="true">
        <div class="input__wrapper">
          <input asp-for="FirstName" placeholder="Имя" class="input">@Html.ValidationMessageFor(x=>x.FirstName)
          <input asp-for="LastName" placeholder="Фамилия" class="input">@Html.ValidationMessageFor(x=>x.LastName)
          <input asp-for="EMail" placeholder="Email" class="input">@Html.ValidationMessageFor(x=>x.EMail)
          <input asp-for="Password" placeholder="Пароль" class="input">@Html.ValidationMessageFor(x=>x.Password)
        </div>
        <div class="window__links">
           <a asp-action="Autentification" class="window__link">Авторизация</a>
        </div>
        <button type="submit" class="btn">Зарегистрироваться</button>
      </form>
    </div>
  </div>
</body>
</html>

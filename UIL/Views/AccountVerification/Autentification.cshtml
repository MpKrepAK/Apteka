@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ML.Mapper.UserAuth
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/style.css">
  <title>Вход</title>
</head>
<body>
  <div class="window">
    <div class="window__title">Вход</div>
    <div class="window__content">
      <form class="input__form"
                  asp-action="Authenticate"
                  asp-controller="AccountVerification"
                  asp-antiforgery="true">
        <div class="input__wrapper">
          <input asp-for="EMail" placeholder="Логин" class="input">
          <input asp-for="Password" placeholder="Пароль" class="input">
        </div>
        <div class="window__links">
          <a asp-action="Registration" class="window__link">Регистрация</a>
        </div>
        <button type="submit" class="btn">Войти</button>
      </form>
    </div>
  </div>
</body>
</html>
